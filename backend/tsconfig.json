{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types", ]
  },
  "include": ["src/**/*", "src/types/**/*"],
  "ts-node": {
    "files": true
  }
}

